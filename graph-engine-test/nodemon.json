{
    "ignore": [
        "front/src/app.js",
        "back/src/app.js",
        "front/src/app.json",
        "back/src/app.json",
        "./node_modules",
        "./front/node_modules",
        "./back/node_modules"
    ],
    "ignoreRoot": [
        "**/.git/**",
        "**/.log/**",
        "**/.nyc_output/**",
        "**/.sass-cache/**",
        "**/bower_components/**",
        "**/coverage/**"
    ],
    "watch": [
        "./",
        "../node_modules/obsidian/lib"
    ],
    "ext": "js,jsx,css,json",
    "env": {
      "NODE_ENV": "development"
    }
}
